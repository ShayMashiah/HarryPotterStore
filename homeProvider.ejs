            {
                $( "#err_title_" + i.toString ( ) )[0].innerText = "forbidden empty title"
                $( "#err_title_" + i.toString ( ) ).show ( )
                err = true
            }
            if ( $( "#price_" + i.toString ( ) )[0].value == "" )
            {
                $( "#err_price_" + i.toString ( ) )[0].innerText = "forbidden empty price"
                $( "#err_price_" + i.toString ( ) ).show ( )
                err = true
            }
            if ( $( "#collectionName_" + i.toString ( ) )[0].value == "" )
            {
                $( "#err_collectionName_" + i.toString ( ) )[0].innerText = "forbidden empty collectionName"
                $( "#err_collectionName_" + i.toString ( ) ).show ( )
                err = true
            }
            if ( $( "#character_" + i.toString ( ) )[0].value == "" )
            {
                $( "#err_character_" + i.toString ( ) )[0].innerText = "forbidden empty character"
                $( "#err_character_" + i.toString ( ) ).show ( )
                err = true
            }
            
